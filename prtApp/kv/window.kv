<FilePopup>:
    auto_dismiss: False
    size_hint: None,None
    size: 1000,600
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10
        Label:
            id: indicator
            text: root.ids.mainchooser.path
            size_hint: 1,0.1
            font_size: 20
            text_size: self.size
            halign: 'left'
        FileChooserListView:
            id: mainchooser
        BoxLayout:
            size_hint: 1,0.1
            orientation: 'horizontal'
            spacing: 10
            Button:
                text: 'Cancel'
                on_release: root.dismiss()
            Button:
                text: 'Load Selected'
                on_release: root.load_data()
                
<ErrPop>:
    auto_dismiss: True
    size_hint: None,None
    size: 400,200
    title: 'Error'
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10
        Label:
            text: 'Please enter a file name'
        Button:
            text: 'Dismiss'
            on_release: root.dismiss()
        
<SavePop>:
    title: 'Save Config'
    auto_dismiss: False
    size_hint: None, None
    size: 1000,600
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10
        Label:
            text: 'Choose Directory to Save Config File'
            size_hint: 1,0.1
            font_size: 40
            text_size: self.size
            halign: 'left'
        Label:
            id: indicator
            text: root.ids.mainchooser.path
            size_hint: 1,0.1
            font_size: 20
            text_size: self.size
            halign: 'left'
        FileChooserListView:
            id: mainchooser
            bar_width: 15
            dirselect: True
            on_submit: root.update_label
            filters: [root.is_dir]
        Label:
            text: 'File Name:'
            size_hint: 1,0.1
            font_size: 40
            text_size: self.size
            halign: 'left'
        TextInput:
            id: jsonsavename
            size_hint: 1,0.1
            multiline: False
            font_size: 28
            size_hint: 1, None
            height: 40
            write_tab: False
            padding: [5, ( self.height - self.line_height ) / 2]
        BoxLayout:
            size_hint: 1,0.1
            orientation: 'horizontal'
            spacing: 10
            Button:
                text: 'Dismiss'
                on_release: root.dismiss()
            Button:
                text: 'Save'
                on_release: root.save_data()

<Tooltip>:
    size_hint: 0.3, None
    text_size: self.width - 10, None
    height: self.texture_size[1] + 10
    halign: 'center'
    valign: 'middle'
    canvas.before:
        Color:
            rgba: 0.8, 0.8, 0.8, 0.9
        Rectangle:
            size: self.size
            pos: self.pos
    
<PadLayout>:
    padding: 15
    spacing: 5

<LoadScreen>:
    MainBox:
    
<ButtonUp>:
    size_hint: None, None
    height: 40
    width: 40
    font_size: 40
    font_name: './helvetica.ttf'

<ButtonDown>:
    size_hint: None, None
    height: 40
    width: 40
    font_size: 40
    font_name: './helvetica.ttf'
    
<IntInput>:
    multiline: False
    font_size: 28
    size_hint: 1, None
    height: 40
    padding: [5, ( self.height - self.line_height ) / 2]
    
<BasicInput>:
    multiline: False
    font_size: 28
    size_hint: 1, None
    height: 40
    write_tab: False
    padding: [5, ( self.height - self.line_height ) / 2]
    
<InputLabel>:
    size_hint: 1, None
    height: 40
    
<InputSwitch>:
    size_hint: 1, None
    height: 40
    
<SettingsTab>:
    do_default_tab: False
    tab_width: 200
    ButtonTab:
        text: 'Basic Settings'
        PadLayout:
            orientation: 'horizontal'
            PadLayout:
                orientation: 'vertical'
                InputLabel:
                    text: 'Experiment Name'
                BasicInput:
                    id: experimentname_input
                    tooltiptext: 'Name of the experiment (e.g. <Adaptation>)'
                InputLabel:
                    text: 'Trial/Volume Duration (ms)'
                IntInput:
                    id: duration_input
                    tooltiptext: 'Duration of volumes to model in milliseconds.  For example if you wish to model 3 seconds of brain activity after a stimulus presentation, enter 3000.'
                PadLayout:
                    padding: 0
                    size_hint: 1, None
                    height: 40
                    orientation: 'horizontal'
                    InputLabel:
                        size_hint: None,None
                        width: 75
                        text: 'Jitter'
                        halign: 'center'
                        text_size: self.size
                    InputLabel:
                        text_size: self.size
                        halign: 'center'
                        text: 'Jitter Column Name'
                PadLayout:
                    size_hint: 1, None
                    height: 40
                    padding: 0
                    orientation: 'horizontal'
                    InputSwitch:
                        id: jitterswitch
                        size_hint: None,None
                        height: 40
                        width: 75
                        on_active: self.disable(target1=jittername_input)
                    BasicInput:
                        tooltiptext: 'A \'jitter\' column allows you to provide a column which will adjust the trial/volume duration by the amount of milliseconds contained in the jitter column.'
                        id: jittername_input
                        disabled: True
                PadLayout:
                    padding: 0
                    size_hint: 1, None
                    height: 40
                    orientation: 'horizontal'
                    InputLabel:
                        size_hint: None,None
                        width: 75
                        text: 'Null Condition'
                        halign: 'center'
                        text_size: self.size
                    InputLabel:
                        size_hint: None,None
                        width: 75
                        text: 'Include Null'
                        text_size: self.size
                        halign: 'center'
                    InputLabel:
                        text_size: self.size
                        halign: 'center'
                        valign: 'middle'
                        text: 'Null Condition Name'
                PadLayout:
                    size_hint: 1, None
                    height: 40
                    padding: 0
                    orientation: 'horizontal'
                    InputSwitch:
                        id: nullcondswitch
                        size_hint: None,None
                        height: 40
                        width: 80
                        on_active: self.disable(target1=nullname_input,target2=nullswitch)
                    InputSwitch:
                        id: nullswitch
                        disabled: True
                        size_hint: None,None
                        height: 40
                        width: 80
                    BasicInput:
                        id: nullname_input
                        tooltiptext: 'If you have a null condition and wish to exclude it from your analysis, enter the name of that condition as it appears in your condition/trial column, and set the \'Include Null\' slider to \'OFF\''
                        disabled: True
                Label:
            PadLayout:
                PadLayout:
                    padding: 0
                    orientation: 'vertical'
                    InputLabel:
                        text: 'Baseline Onset Time Column Name'
                    BasicInput:
                        id: onsettime_input
                        tooltiptext: 'Enter the name of the baseline onset time column name (e.g. Baseline.OnsetTime)'
                    InputLabel:
                        text: 'Onset Column Names'
                    BasicInput:
                        id: onsetcolumn_input
                        tooltiptext: 'Enter a list of each of the column names which contain onset times for your various stimuli/conditions, and separate them with commas (e.g. Stimuli1.OnsetTime, Stimuli2.OnsetTime)'
                    InputLabel:
                        text: 'Condition Column Name 1'
                    BasicInput:
                        id: conditionname1_input
                        tooltiptext: 'Enter the name of a column which contains the first part of the names by which you wish to separate the conditions of your prt file'
                    InputLabel:
                        text: 'Condition Column Name 2'
                    BasicInput:
                        id: conditionname2_input
                        tooltiptext: 'Enter the name of a column which contains the second part of the names by which you wish to separate the conditions of your prt file'
                    Label:
    ButtonTab:
        text: 'Parametric Design'
        PadLayout:
            orientation: 'vertical'
            PadLayout:
                orientation: 'horizontal'
                PadLayout:
                    orientation: 'vertical'
                    PadLayout:
                        padding: 0
                        size_hint: 1, None
                        height: 40
                        orientation: 'horizontal'
                        InputLabel:
                            size_hint: None,None
                            width: 75
                            text: 'Parametric Design'
                            halign: 'center'
                            text_size: self.size
                        InputLabel:
                            text_size: self.size
                            halign: 'center'
                            valign: 'middle'
                            text: 'Parametric Stimuli Column Name'
                    PadLayout:
                        size_hint: 1, None
                        height: 40
                        padding: 0
                        orientation: 'horizontal'
                        InputSwitch:
                            id: parametricswitch
                            size_hint: None,None
                            height: 40
                            width: 75
                            on_active: self.disable(target1=parametricname_input,target2=parametricweights_input)
                        BasicInput:
                            id: parametricname_input
                            tooltiptext: 'Enter the name of the column which contains your stimuli'
                            disabled: True
                    Label:
						size_hint: 1,None
						height: 50
					Label:
                        text_size: self.size
                        valign: 'top'
                        halign: 'justify'
                        font_size: 12
                        text: 'Parametric designs are used when the data is expected to follow a particular slope or graduated pattern. For example, parametric designs are used to model adaptation effects where a stimulus dimension is expected to modulate neural activation recovery. To model a slope pattern, the user assigns weights to stimuli when creating the PRT file. The obtained data is compared to the expected data pattern. Brain regions that follow the predicted parametric pattern will be identified.\n\n Enter the stimuli labels and their associated weights in the box on the right, with one pair per line, separated by a colon, with the stimuli on the left, and the weight on the right, such as:\n\nA:0\nB:1\nC:2'
                PadLayout:
                    orientation: 'vertical'
                    InputLabel:
                        text: 'Parametric Stimuli Weights'
                    TextInput:
                        id: parametricweights_input
                        multiline: True
                        disabled: True
                        font_size: 26
    ButtonTab:
        text: 'Errors and Gaps'
        PadLayout:
            orientation: 'horizontal'
            PadLayout:
                orientation:'vertical'
                spacing: 0
                InputLabel:
                    text:'Error Modelling'
                PadLayout:
                    orientation: 'horizontal'
                    InputLabel:
                        size_hint: None,None
                        width: 75
                        halign: 'center'
                        text_size: self.size
                        text: 'Model Error'
                    InputLabel:
                        text: 'Error Column Name(s)'
                        text_size: self.size
                        halign: 'center'
                PadLayout:
                    orientation: 'horizontal'
                    InputSwitch:
                        id: errorswitch
                        size_hint: None,None
                        height: 40
                        width: 75
                        on_active: self.disable(target1=error_input,target2=seperrorswitch)
                    BasicInput:
                        id: error_input
                        tooltiptext: 'Enter a list of each of the column names which contain error indicators (should be 1 and 0) and separate them with commas (e.g. ErrorCol1, ErrorCol2)'
                        disabled: True
                PadLayout:
                    orientation: 'horizontal'
                    InputLabel:
                        text: 'Group Errors Together'
                    InputSwitch:
                        id: seperrorswitch
                        disabled: True
                Label:
                Label:
                Label:
                Label:
                Label:
            PadLayout:
                orientation:'vertical'
                spacing: 0
                InputLabel:
                    text:'Gap Modelling'
                PadLayout:
                    orientation: 'horizontal'
                    InputLabel:
                        size_hint: None,None
                        width: 75
                        halign: 'center'
                        text_size: self.size
                        text: 'Model Gaps'
                    InputLabel:
                        text: 'Gap Column Name(s)'
                        text_size: self.size
                        halign: 'center'
                PadLayout:
                    orientation: 'horizontal'
                    InputSwitch:
                        id: gapswitch
                        size_hint: None,None
                        height: 40
                        width: 75
                        on_active: self.disable(target1=gapname_input,target2=gapcolnames_input)
                    BasicInput:
                        id: gapcolnames_input
                        disabled: True
                PadLayout:
                    orientation: 'horizontal'
                    InputLabel:
                        text: 'Gap Name'
                    BasicInput:
                        id: gapname_input
                        disabled: True
                    
                Label:
                Label:
                Label:
                Label:
                Label:
    ButtonTab:
        text: 'Grouping'
        PadLayout:
            orientation: 'horizontal'
            PadLayout:
                orientation:'vertical'
                spacing: 0
                InputLabel:
                    text:'Grouping Keywords'
                PadLayout:
                    orientation: 'horizontal'
                    InputLabel:
                        size_hint: None,None
                        width: 75
                        halign: 'center'
                        text_size: self.size
                        text: 'Group Keywords'
                    InputLabel:
                        text: 'Keywords'
                        text_size: self.size
                        halign: 'center'
                PadLayout:
                    orientation: 'horizontal'
                    InputSwitch:
                        id: groupingswitch
                        size_hint: None,None
                        height: 50
                        width: 75
                        on_active: self.disable(target1=grouping_input,target2=groupingswitch)
                    BasicInput:
                        id: grouping_input
                        tooltiptext: 'Enter a list of each of the keywords to be found in condition and trial column names that you want to use as the basis for grouping conditions together (separate with a comma)'
                        disabled: True
                Label:
                Label:
                Label:
                Label:
                Label:
            PadLayout:
                orientation:'vertical'
                spacing: 0
                
<ButtonTab>:
    background_normal: 'atlas://defaulttheme/button'
    background_down: 'atlas://defaulttheme/button_pressed'

<ConfigScreen>:
    PadLayout:
        orientation: 'vertical'
        spacing: 10
        SettingsTab:
            id: settab
